{
  "name": "@fransek/next-i18n",
  "version": "0.3.0",
  "author": "Frans Ekman <fransedvinekman@gmail.com>",
  "license": "MIT",
  "description": "A simple i18n library for Next.js",
  "keywords": [
    "next",
    "i18n",
    "react",
    "typescript"
  ],
  "homepage": "https://github.com/fransek/next-i18n#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fransek/next-i18n"
  },
  "bugs": {
    "url": "https://github.com/fransek/next-i18n/issues"
  },
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "build:demo": "sh scripts/build-demo.sh",
    "demo": "cd demo && pnpm dev",
    "dev": "rollup -c -w",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --run --coverage --passWithNoTests",
    "lint": "eslint",
    "prepare": "husky",
    "publish": "tsx scripts/publish.ts"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "2.1.8",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "next": "^15.3.2",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rollup": "^4.41.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "bash -c tsc --noEmit"
    ]
  }
}
